{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc.exe build active file",
			"command": "C:\\Users\\timpm\\mingw64\\bin\\gcc.exe",
			"args": [
    			"-g",
    			"${file}",
    			"-o",
    			"${fileDirname}\\${fileBasenameNoExtension}.exe",
    			"-Wall",
    			"-Wextra",
    			"-Wconversion",
    			"-Wsign-conversion",
    			"-Wshadow",
    			"-Wpedantic",
    			"-std=c17",
    			"-D__USE_MINGW_ANSI_STDIO=1"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: C:\\timpm\\mingw64\\bin\\gcc.exe"
		}
	]
